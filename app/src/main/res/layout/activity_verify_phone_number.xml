<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Ui.SignUP.VerifyPhoneNumber">


    <TextView
        android:id="@+id/verify_Verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/blue"
        android:text="@string/verification"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="50sp"
        />

    <TextView
        android:id="@+id/verify_Verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verify_Verification"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:text="@string/enter_the_code_that_you_received_at_sms_box"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="10sp"
        />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/verify_Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verify_Verification"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70sp"
        app:pinLineColors="@color/black"
        android:maxLength="6"
        android:layout_marginStart="30sp"
        android:cursorVisible="false"
        android:inputType="number"
        android:textIsSelectable="false"
        android:digits="1234567890"
        android:layout_marginEnd="30sp"
        android:textSize="25sp"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>